<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#102542"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/linearLayoutVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logoImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/pulselog_logo" />

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/cafe24surround"
                android:paddingLeft="12dp"
                android:text="PULSELOG"
                android:textColor="#FFF2DC"
                android:textSize="40dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/loginTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/cafe24surround"
            android:text="회원가입"
            android:textColor="#FFF2DC"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="7px"
            android:layout_marginTop="14px"
            android:background="#FFF2DC" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/radius"
            android:backgroundTint="#FFF2DC"
            android:ems="10"
            android:fontFamily="@font/cafe24surround_air"
            android:hint="   이름을 입력하세요"
            android:inputType="text"
            android:textColor="#102542"
            android:textColorHint="#7A5144"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/editTextPhonenum"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/radius"
            android:backgroundTint="#FFF2DC"
            android:ems="10"
            android:fontFamily="@font/cafe24surround_air"
            android:hint="   전화번호를 -없이 입력하세요"
            android:inputType="text"
            android:textColor="#102542"
            android:textColorHint="#7A5144"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/editTextId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/radius"
                android:backgroundTint="#FFF2DC"
                android:ems="10"
                android:fontFamily="@font/cafe24surround_air"
                android:hint="   아이디를 입력하세요"
                android:inputType="text"
                android:textColor="#102542"
                android:textColorHint="#7A5144"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnCheckId"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:text="중복확인"
                android:fontFamily="@font/cafe24surround_air"
                android:textSize="12sp"
                android:layout_gravity="center|right"
                android:layout_marginRight="5dp"
                android:backgroundTint="#102542"
                android:padding="0dp"
                android:textColor="#FFFFFF"/>

        </FrameLayout>

        <AutoCompleteTextView
            android:id="@+id/idCondition"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:text="4~12글자, 영어와 숫자 조합만 가능합니다"
            android:textSize="12sp"
            android:fontFamily="@font/cafe24surround"
            android:textColor="#FFF2DC"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="11px"
            android:background="@drawable/radius"
            android:backgroundTint="#FFF2DC"
            android:ems="10"
            android:fontFamily="@font/cafe24surround_air"
            android:hint="   비밀번호를 입력하세요"
            android:inputType="textPassword"
            android:textColor="#102542"
            android:textColorHint="#7A5144"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextId" />

        <AutoCompleteTextView
            android:id="@+id/pwCondition"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/cafe24surround"
            android:paddingLeft="12dp"
            android:text="8글자 이상, 영문/숫자/특수문자를 모두 사용해야 합니다"
            android:textColor="#FFF2DC"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/editTextCheckPW"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="11px"
            android:background="@drawable/radius"
            android:backgroundTint="#FFF2DC"
            android:ems="10"
            android:fontFamily="@font/cafe24surround_air"
            android:hint="   비밀번호 확인"
            android:inputType="textPassword"
            android:textColor="#102542"
            android:textColorHint="#7A5144"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextId" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="CheckBox" />

            <TextView
                android:id="@+id/agreement1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="이용약관 동의서"
                android:textSize="14sp"
                android:fontFamily="@font/cafe24surround"
                android:textColor="#FFF2DC"/>

            <TextView
                android:id="@+id/needTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:text="(필수)"
                android:textSize="14sp"
                android:fontFamily="@font/cafe24surround"
                android:textColor="#EF6F6C"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:background="#102542"
                android:paddingRight="10dp"
                android:src="@drawable/right_btn"
                android:contentDescription="@string/desc_image_button1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="CheckBox" />

            <TextView
                android:id="@+id/agreement2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="개인정보 수집 동의서"
                android:textSize="14sp"
                android:fontFamily="@font/cafe24surround"
                android:textColor="#FFF2DC" />

            <TextView
                android:id="@+id/needTxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:text="(필수)"
                android:textSize="14sp"
                android:fontFamily="@font/cafe24surround"
                android:textColor="#EF6F6C" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:background="#102542"
                android:paddingRight="10dp"
                android:src="@drawable/right_btn"
                android:contentDescription="@string/desc_image_button2"/>
        </LinearLayout>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFF2DC"
            android:fontFamily="@font/cafe24surround"
            android:text="가입하기"
            android:textSize="14sp"
            android:textColor="#102542" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>