<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#102542"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Logo_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/pulselog_logo" />

            <TextView
                android:id="@+id/Title_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/cafe24surround"
                android:paddingLeft="12dp"
                android:text="PULSELOG"
                android:textColor="#FFF2DC"
                android:textSize="40dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/cafe24surround"
            android:text="로그인"
            android:textColor="#FFF2DC"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="7px"
            android:layout_marginTop="14px"
            android:background="#FFF2DC" />

        <EditText
            android:id="@+id/editTextId"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/radius"
            android:backgroundTint="#FFF2DC"
            android:ems="10"
            android:fontFamily="@font/cafe24surround_air"
            android:hint="   아이디를 입력하세요"
            android:inputType="text"
            android:textColor="#102542"
            android:textColorHint="#7A5144"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="11px"
            android:background="@drawable/radius"
            android:backgroundTint="#FFF2DC"
            android:ems="10"
            android:fontFamily="@font/cafe24surround_air"
            android:hint="   비밀번호를 입력하세요"
            android:inputType="textPassword"
            android:textColor="#102542"
            android:textColorHint="#7A5144"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextId" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFF2DC"
            android:fontFamily="@font/cafe24surround"
            android:text="로그인하기"
            android:textSize="14sp"
            android:textColor="#102542" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="right|bottom"
            android:backgroundTint="#00FF0000"
            android:fontFamily="@font/cafe24surround"
            android:padding="0dp"
            android:text="회원가입"
            android:textColor="#FFF2DC"
            android:textSize="15sp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>